source 'https://rubygems.org'

# Ruby extensions from Rails
gem 'activesupport'
# State machine
gem 'aasm'
# REST API micro-framework
gem 'grape'
# API presenters
gem "grape-entity"
# Database
gem 'mongoid', '~> 5.0.0'
# WebServer
gem 'puma'
# Debugger
gem 'pry'
gem 'pry-nav'
# Rack development server reloader
gem 'shotgun'

group :test do
  gem 'mongoid_cleaner'
  gem 'rack-test'
  gem 'rspec'
end

group :test, :development do
  gem 'factory_girl'
  gem 'faker'
end